<% if user.pending_received_requests.include?(current_user) %>
    <p class="level-item">Friend request pending...</p>
<% elsif user.pending_sent_requests.include?(current_user) %>
    <p class="level-item">Sent you a request!</p>
    <%= link_to "Accept", user_friendship_path(user), method: 'patch', class: "button is-success is-small" %>
    <%= link_to "Deny", user_friendship_path(user), method: 'delete', class: "button is-danger is-small" %>
<% elsif user.friends_1.include?(current_user) or user.friends_2.include?(current_user) %>
    <p class="level-item">Friends</p>
<% else %>
    <%= link_to "Send friend request", user_friendship_path(user), method: 'post', class: "button is-primary is-small" unless user == current_user %>
<% end %>