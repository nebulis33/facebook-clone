<% if user.pending_received_requests.include?(current_user) %>
    <%= "Friend request pending." %>
<% elsif user.pending_sent_requests.include?(current_user) %>
    <%= "sent you a request!"  %>
    <%= link_to "Accept", user_friendship_path(user), method: 'patch' %>
    <%= link_to "Deny", user_friendship_path(user), method: 'delete' %>
<% elsif user.friends_1.include?(current_user) or user.friends_2.include?(current_user) %>
    <%= "Friends" %>
<% else %>
    <%= link_to "Send friend request", user_friendship_path(user), method: 'post' unless user == current_user %>
<% end %>