<section class="container">
    <div class="columns is-centered">
        <ul class="column is-half">
            <% @users.each do |user| %>
                <li class="box level">
                    <div class="level-left">
                        <%= image_tag user.avatar.variant(resize: "60x60!"), class: "level-item" %>
                        <%= link_to user.name, user_path(user), class: "level-item" %>
                        <%= render partial: 'friend_status', locals: {user: user} %>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</section>